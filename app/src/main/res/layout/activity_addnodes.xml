<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#87CEEB"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_addnodes"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#696969"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_time"
            android:textColor="#696969"/>

        <EditText
            android:id="@+id/et_addnodes_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="7"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_money"
            android:textColor="#696969"/>

        <EditText
            android:id="@+id/et_addnodes_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_type"
            android:textColor="#696969"/>

        <Spinner
            android:id="@+id/sp_addnodes_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6" />

    </LinearLayout>
   
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_earnings"
            android:textColor="#696969"/>

        <Spinner
            android:id="@+id/sp_addnodes_earnings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7" >
        </Spinner>
    </LinearLayout>
       
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_remark"
            android:textColor="#696969"/>

        <EditText
            android:id="@+id/et_addnodes_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/bt_addnodes_cancel"
            android:layout_width="150dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="20dip"
            android:text="@string/addnodes_cancel" 
            android:textSize="16dip"
            android:textColor="#696969"
            android:background="@drawable/background_main_button"/>

        <Button
            android:id="@+id/bt_addnodes_add"
            android:layout_width="150dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addnodes_add"
            android:textSize="16dip"
            android:textColor="#696969"
            android:background="@drawable/background_main_button"/>
    </LinearLayout>

</LinearLayout>